extends layout

block content
  #banner.page-header
    .row
      .col-xs-12
        h1 Search to find a tradesman who can carry out your job!
        form.form-horizontal(action='/action_page.php', style='padding-top: 10px;')
          .form-group
                label.control-label.col-sm-2(for='trade') Trade
                .col-sm-10
                  select#trade.form-control(required='true', onchange='ChangeServiceList()')
                    option(selected disabled) Select your trade
                    option(value='Plumber') Plumber
                    option(value='Electrician') Electrician
                    option(value='Carpenter') Carpenter
                    option(value='AC/Refrigeration') AC/Refrigeration
                    option(value='Gardening/Landscaping') Gardening/Landscaping
                    option(value='Labourer') Labourer
          .form-group
                label.control-label.col-sm-2(for='service') Service
                .col-sm-10
                  select#service.form-control(required='true')

          .form-group
            label.control-label.col-sm-2(for='rating', require) Minimum rating
            .col-sm-10
              input#email.form-control(type='numeric', min='0', max='5', require)
          .form-group
            .col-sm-offset-2.col-sm-10
              button.btn.btn-default(type='submit') Submit

  script(src='/javascripts/DynamicForm.js')

